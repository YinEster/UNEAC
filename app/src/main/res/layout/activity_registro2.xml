<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registro_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="mx.org.uneac.uneac.MainActivity">
<!-- Este sería el título en caso de no ponerlo en el banner principal-->
    <LinearLayout
        android:id="@+id/registroUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingTop="10dp"
        android:text="REGISTRO DE USUARIO"
        android:textColor="?attr/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:textColor="?attr/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="1/2"/>

    </LinearLayout>

    <!-- Campo correo-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:text="Dirección de correo electrónico"
        />

    <EditText
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="correo@ejemplo.com"
        android:inputType="textEmailAddress" />



    <!-- Campo usuario-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:layout_marginTop="13dp"
        android:text="Nombre de usuario"
        />

    <EditText
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Elige un nombre de usuario"
        android:inputType="textPersonName" />


    <!-- Campo fecha de nacimiento-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:layout_marginTop="13dp"
        android:text="Fecha de nacimiento"
        />

    <EditText
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="01/01/1990"
        android:inputType="date" />



    <!-- Campo contraseña-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:layout_marginTop="13dp"
        android:text="Contraseña"
        />

    <EditText
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Elige una contraseña"
        android:inputType="textPassword|numberPassword" />


    <!-- Campo repetir contraseña-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:layout_marginTop="13dp"
        android:text="Repetir contraseña"
        />

    <EditText
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe de nuevo tu contraseña"
        android:inputType="textPassword|numberPassword" />


    <!--Botón Acceder-->
    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:layout_gravity="right"
        android:text="Continuar" />


</LinearLayout>
