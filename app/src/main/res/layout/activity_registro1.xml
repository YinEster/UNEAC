<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    android:keepScreenOn="true"
    tools:context="mx.org.uneac.uneac.registro1" >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:src="@drawable/logoune"
        />


    <LinearLayout
        android:id="@+id/tiposInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


    <ImageView
            android:id="@+id/opcionFB"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:gravity = "left"
            android:src="@drawable/logofacebook"/>

    <!--Espacio entre botones lo hago con layoutMargin-->

    <ImageView
            android:id="@+id/opcionGM"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logogmail" />

    <ImageView
            android:id="@+id/opcionEM"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logoemail"
                />

    </LinearLayout>

    <!-- El siguiente layout acomoda mi título "Elegir método de registro", en el pie de la pantalla -->
    <LinearLayout
        android:id="@+id/pieTitulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:text="\n Método de registro"
            android:textSize="30sp"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- El siguiente layout sirve para acomodar el botón Acceder en la parte inferior de la ventana-->
    <LinearLayout
        android:id="@+id/pieAcceder"
        android:layout_width="fill_parent"
        android:layout_height="168dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonR1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Acceder" />

    </LinearLayout>

</LinearLayout>
